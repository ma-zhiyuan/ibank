<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
%>

<!DOCTYPE HTML>
<html>
<head>
<base href="<%=basePath%>">

<title>添加存款利率</title>
<%@include file="templates/base_css.jsp"%>

<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->

<link rel="stylesheet"
	href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="shortcut icon" type="image/x-icon" href="${basePath }resources/imgs/logo.png" />
<script type="text/javascript"
	src="${basepath }/resources/user/js/jquery.js"></script>
<script
	src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script type="text/javascript">
	$(function() {
		$("#rate").blur(function() {
			var rate = $("#rate").val();
			var isdeposit = $("#isdeposit").val();
			var duration = $("#duration").val();
			if (rate >= 1 ) {
				alert("利率必须大于0，小于1 !!")
				return false;
			} else {
				$("#r").html("");
			}
		});
		$("#duration").blur(function() {
			var duration = $("#duration").val();
			var rate = $("#rate").val();
			var isdeposit = $("#isdeposit").val();
			if (duration<0) {
				alert("天数必须为整数 !!")
				return false;
			} else {
				$("#d").html("");
			}
		});
		$("#isdeposit").blur(function() {
			var isdeposit = $("#isdeposit").val();
			var duration = $("#duration").val();
			var rate = $("#rate").val();
			if (isdeposit != 1||isdeposit!=0) {
				alert("请输入正确数字 !!");
				return false;
			} else {
				$("#i").html("");
			}
		});
	});
</script>
</head>

<body>
	<!-- 导入公用模板 -->
	<%@include file="templates/header.jsp"%>
	<div id="frameBody" class="frame-body">
		<!-- 导入左侧导航 -->
		<%@include file="templates/left_navigation.jsp"%>
		<div class="frame-wrapper">
			<div class="frame-msub" id="frameMsub">
				<div class="frame-msub-hd">
					<h4 class="msub-title">
						<span class="iconfont icon-setting"></span>银行利率
					</h4>
				</div>
				<div class="frame-msub-bd"></div>
			</div>
			<div class="frame-page">
				<div class="frame-main">
					<div class="frame-main-bd">
						<h1 class="frame-title">添加存款利率</h1>
						<ul class="glb-tabs">
							<li class="glb-col-right"><a
								href="JavaScript:history.back(-1)"
								class="glb-button glb-btn-primary"> <span
									class="iconfont icon-reviewing"></span> 返回上一页
							</a></li>
						</ul>
						<div style="text-align:center;">
							<div class="frend-link" style="width:700px;margin:0 auto;">
								<form class="form-inline"
									action="${basepath }/LAdmin/Bank/insertBankInterest">
									<div class="form-group">
										<label class="sr-only" for="exampleInputAmount">利率</label>
										<div class="input-group">
											<div class="input-group-addon"></div>
											<input type="text" class="form-control" id="rate"
												placeholder="请输入新利率" name="rate">
											<div class="input-group-addon"></div>
										</div>
										<label id="r"></label> <br> <label class="sr-only"
											for="exampleInputAmount">持续时间</label>
										<div class="input-group">
											<div class="input-group-addon"></div>
											<input type="text" class="form-control" id="duration"
												placeholder="请输入持续时间(天)" name="duration">
											<div class="input-group-addon"></div>
										</div>
										<label id="d"></label> <br> <label class="sr-only"
											for="exampleInputAmount">存取款</label>
										<div class="input-group">
											<div class="input-group-addon"></div>
											<input type="text" class="form-control" id="isdeposit"
												placeholder="存款(1)取款(0)" name="isdeposit">
											<div class="input-group-addon"></div>
										</div>
										<label id="i"></label> <br>
									</div>
									<br>
									<div>
										<button type="submit" class="btn btn-primary">确定</button>
									</div>
								</form>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
</body>
<!-- 导入js库模板 -->
<%@include file="templates/base_js.jsp"%>
</html>
